<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/buttonEscolherEntidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="Escolher Entidade" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Escolha uma entidade, caso contrário escolheremos uma aleatoriamente para você."
        android:textStyle="italic" />

    <Button
        android:id="@+id/take_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonEscolherEntidade"
        android:layout_alignParentBottom="true"
        android:text="Fotografar Nota" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/take_photo_button"
        android:layout_alignLeft="@+id/take_photo_button"
        android:layout_alignRight="@+id/TextView01"
        android:text=" ... ou Tire uma foto" />

    <Button
        android:id="@+id/buttonDoar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cnpjForm"
        android:layout_centerHorizontal="true"
        android:text="Doar" />

    <TextView
        android:id="@+id/choosen_ong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonEscolherEntidade"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="10dp" />

    <EditText
        android:id="@+id/valorForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dataForm"
        android:layout_below="@+id/dataForm"
        android:ems="10"
        android:hint="VALOR R$"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/valorForm"
        android:layout_alignBottom="@+id/valorForm"
        android:layout_alignLeft="@+id/textView1"
        android:text="Total:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cooForm"
        android:layout_alignBottom="@+id/cooForm"
        android:layout_alignRight="@+id/textView4"
        android:text="COO:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cnpjForm"
        android:layout_alignBottom="@+id/cnpjForm"
        android:layout_alignRight="@+id/textView5"
        android:text="CNPJ:" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dataForm"
        android:layout_alignBottom="@+id/dataForm"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginLeft="16dp"
        android:text="Data:" />

    <EditText
        android:id="@+id/dataForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonEscolherEntidade"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Data"
        android:inputType="date">
        
    </EditText>

    <EditText
        android:id="@+id/cooForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/valorForm"
        android:layout_below="@+id/valorForm"
        android:ems="10"
        android:hint="COO"
        android:inputType="number" >

        
    </EditText>

    <EditText
        android:id="@+id/cnpjForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cooForm"
        android:layout_below="@+id/cooForm"
        android:ems="10"
        android:maxLength="14"
        android:hint="CNPJ"
        android:inputType="number" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choosen_ong"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Digite informações da Nota Fiscal"
        android:textStyle="italic" />

</RelativeLayout>